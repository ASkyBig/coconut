<% include layout/header %>
<% include nav/topbar %>
<div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-xs-12">
        <h2><%= tittle %></h2>
    </div>
</div>
<hr>

<div class="row">
    <div class="col-lg-3 col-lg-offset-3 col-xs-12">
        <form action="/register" method="post">
            <%- message %>
            <br>
            name:<input name="name" class="form-control" required="required">
            <br>
            psw:<input name="password" class="form-control" type="password" required="required">
            <br>
            email:<input name="email" class="form-control" type="email" required="required">
            <br>
            <button type="submit" class="btn btn-default btn-success">submit</button>
        </form>
        <% include layout/footer %>
    </div>
</div>